{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}
    <div class="content_register">
        {{form(form)}}
        {#<button type="button" id='show_modal' class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>#}
        {% if email_exist == 1 %}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Notification Erreur</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            L'email que vous avez utiliser est déjà associer a un compte. Veuillez changer d'addresse email ou vous connecter a votre compte.
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-primary" href="{{path('app_login')}}"> Se connecter </a>
                            {#<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>#}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="exist_mail">
            {{email_exist}}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{asset('assets/js/register/register.js')}}" type="text/javascript"></script>
{% endblock %}