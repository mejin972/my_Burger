{% extends 'base.html.twig' %}

{% block title %} {{app.user.email}} - my_Burger{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/account/style.css')}}">
{% endblock %}

{% block body %}

    <div class="content_account">
        <h1> Bonjour <span class="name">{{app.user.email}}</span> </h1>
        <a href="{{path('admin')}}" class="btn btn-primary" > Manage </a>
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-3">
            <div class="col">
                <div class="card">
                    <img src="{{asset('assets/images/account/padlock.png')}}" class="card-img-top" style="width: 60%; padding: 10px" alt="Information personnels">
