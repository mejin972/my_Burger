{% extends 'base.html.twig' %}

{% block title %} My favoris - my_Burger{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/product/card_product.css')}}" type="text/css">
            
{% endblock %}

{% block body %}    
    <div class="content_favoris">
        {% for favori in allFavoris %}
        
            <div class="card" style="width: 18rem;">
                    <div class="img_card">
                        <img src="/uploads/images/products/{{favori.illustration}}" class="card-img-top" alt="{{favori.name}}">
                        <a href="#!" title="ajouter aux favoris"><i class="far fa-heart"></i></a>
                        <a href="{{path('add_favoris', {'userId': app.user.id , 'productId' : favori.id} )}}" title="ajouter aux favoris"><i , class="fas fa-heart"></i></a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{favori.name}}</h5>
                        <a href="#!" class="food-card_author">{{favori.category.getName()}}</a>
                        <p class="card-text">{{favori.description}}</p>
                        <hr/>
                        <div class="space-between">
                            <div class="food-card_price">
                                <span class=""> {{favori.prix}} â‚¬</span>
                            </div>
                            <div class="food-card_order-count">
                                <div class="input-group mb-3">
